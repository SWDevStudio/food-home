a {
  text-decoration: none;
  color: inherit;
  &:visited {
    color: inherit;
  }
}
body {
  margin: 0;
  padding: 0;
}

.container {
  box-sizing: border-box;
  width: 100%;
  max-width: 768px;
  margin: 0 auto;
  padding: 0 16px;
}

.title {
  font-size: $size__title;
  color: $color__text;
  margin: 0;
}
